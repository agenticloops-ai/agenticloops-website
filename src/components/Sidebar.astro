---
import { getCollection } from 'astro:content';
import type { CollectionEntry } from 'astro:content';

const allCourse = await getCollection('courses');

// Structure: courses/ai-agents-engineering/01-foundations/01-simple-llm-call
// We need to group by module (parts[1]) and show lessons (parts[2+])
interface ModuleData {
  lessons: CollectionEntry<'courses'>[];
  moduleEntry?: CollectionEntry<'courses'>;
}

const modules: Record<string, ModuleData> = {};

allCourse.forEach((entry) => {
  // Astro 5 loader: use id instead of slug
  const id = entry.id;
  const parts = id.split('/');
  // parts[0] = ai-agents-engineering, parts[1] = 01-foundations, parts[2] = 01-simple-llm-call
  if (parts.length >= 2) {
    const moduleName = parts[1]; // e.g., "01-foundations" or "02-advanced"
    
    if (!modules[moduleName]) {
      modules[moduleName] = { lessons: [] };
    }
    
    // If it's a lesson (has parts[2]) add to lessons, otherwise it's the module index
    if (parts.length >= 3) {
      modules[moduleName].lessons.push(entry);
    } else {
      modules[moduleName].moduleEntry = entry;
    }
  }
});

// Sort modules by their number prefix
const sortedModules = Object.keys(modules).sort();

// Helper to format module name (remove number and capitalize)
const formatName = (name: string) => {
  return name.replace(/^\d+-/, '').split('-').map(word => word.charAt(0).toUpperCase() + word.slice(1)).join(' ');
};

const currentSlug = Astro.params.slug;

// Import from shared config (inline for Astro compatibility)
import { COURSE_REPO, getGitHubUrl as getGitHubUrlBase } from '../config/repos';
const getGitHubUrl = (slug: string | undefined) => slug ? getGitHubUrlBase(slug) : `${COURSE_REPO}/tree/main`;

const githubUrl = getGitHubUrl(currentSlug);
---

<nav class="sidebar-nav">
  <div class="sidebar-header">
    <a href={import.meta.env.BASE_URL || '/'} class="back-home">
      <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="m15 18-6-6 6-6"/></svg>
      <span>Back to Home</span>
    </a>
  </div>
  
  <div class="sidebar-content">
    <div class="course-header">
      <div class="course-title">
        <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><rect width="18" height="18" x="3" y="3" rx="2"/><path d="M7 7h10"/><path d="M7 12h10"/><path d="M7 17h10"/></svg>
        Agentic Loops
      </div>
      <a href={githubUrl} target="_blank" rel="noopener noreferrer" class="github-link" title="Open on GitHub">
        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="currentColor">
          <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
        </svg>
      </a>
    </div>
    {sortedModules.map((moduleKey) => {
      const moduleEntry = modules[moduleKey].moduleEntry;
      const rawModuleSlug = moduleEntry?.id || '';
      const moduleSlug = rawModuleSlug.replace(/\.md$/, '');
      const isModuleActive = moduleSlug && currentSlug === moduleSlug;
      return (
      <div class="nav-section">
        <h3 class="nav-section-title">
          <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M4 19.5v-15A2.5 2.5 0 0 1 6.5 2H19a1 1 0 0 1 1 1v18a1 1 0 0 1-1 1H6.5a1 1 0 0 1 0-5H20"/></svg>
          {moduleSlug ? (
            <a href={`${import.meta.env.BASE_URL}courses/${moduleSlug}`} class:list={["module-link", { active: isModuleActive }]}>
              {formatName(moduleKey)}
            </a>
          ) : (
            formatName(moduleKey)
          )}
        </h3>
        <ul class="nav-list">
          {modules[moduleKey].lessons.sort((a, b) => a.id.localeCompare(b.id)).map((lesson) => {
            const lessonSlug = lesson.id.replace(/\.md$/, '');
            const isActive = currentSlug === lessonSlug;
            const lessonTitle = lesson.data.title || formatName(lesson.id.split('/').pop()?.replace(/\.md$/, '') || '');
            return (
              <li>
                <a 
                  href={`${import.meta.env.BASE_URL}courses/${lessonSlug}`}
                  class:list={["nav-link", { active: isActive }]}
                >
                  {lessonTitle}
                </a>
              </li>
            );
          })}
        </ul>
      </div>
    )})}
  </div>
</nav>

