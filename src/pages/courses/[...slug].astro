---
import { getCollection, render } from 'astro:content';
import CourseLayout from '../../layouts/CourseLayout.astro';

export async function getStaticPaths() {
  const courseEntries = await getCollection('courses');
  return courseEntries.map(entry => ({
    params: { slug: entry.id.replace(/\.md$/, '') }, props: { entry },
  }));
}

const { entry } = Astro.props;
const { Content, headings } = await render(entry);
---

<CourseLayout title={entry.data.title || 'Course'} headings={headings}>
  <article class="doc-content">
    <Content />
  </article>
</CourseLayout>

<script>
  // Make all GitHub links open in new tab
  document.querySelectorAll('.doc-content a[href*="github.com"]').forEach(link => {
    link.setAttribute('target', '_blank');
    link.setAttribute('rel', 'noopener noreferrer');
  });
</script>

<style is:global>
  .doc-content {
    color: var(--color-text-primary);
    line-height: 1.7;
  }
  
  .doc-content h1 {
    font-size: 2rem;
    font-weight: 700;
    margin-bottom: 1rem;
    color: var(--color-text-primary);
    letter-spacing: -0.02em;
    text-transform: none;
  }
  
  .doc-content h2 {
    font-size: 1.5rem;
    font-weight: 600;
    margin-top: 2.5rem;
    margin-bottom: 1rem;
    color: var(--color-text-primary);
    padding-bottom: 0.5rem;
    border-bottom: 1px solid var(--color-border);
    text-transform: none;
  }
  
  .doc-content h3 {
    font-size: 1.25rem;
    font-weight: 600;
    margin-top: 2rem;
    margin-bottom: 0.75rem;
    color: var(--color-text-primary);
    text-transform: none;
  }
  
  .doc-content h4 {
    font-size: 1rem;
    font-weight: 600;
    margin-top: 1.5rem;
    margin-bottom: 0.5rem;
    color: var(--color-text-primary);
    text-transform: none;
  }
  
  .doc-content p {
    margin-bottom: 1rem;
    color: var(--color-text-secondary);
  }
  
  .doc-content strong {
    color: var(--color-text-primary);
    font-weight: 600;
  }
  
  .doc-content a {
    color: var(--color-accent-cyan);
    text-decoration: none;
    transition: opacity 0.2s;
  }
  
  .doc-content a:hover {
    opacity: 0.8;
    text-decoration: underline;
  }
  
  .doc-content ul,
  .doc-content ol {
    margin-bottom: 1rem;
    padding-left: 1.5rem;
    color: var(--color-text-secondary);
  }
  
  .doc-content li {
    margin-bottom: 0.5rem;
  }
  
  .doc-content li::marker {
    color: var(--color-text-muted);
  }
  
  /* Inline code */
  .doc-content code:not(pre code) {
    background: var(--color-bg-tertiary);
    color: var(--color-accent-cyan);
    padding: 0.2em 0.4em;
    border-radius: 4px;
    font-size: 0.875em;
    font-family: 'Azeret Mono', monospace;
  }
  
  /* Code blocks */
  .doc-content pre {
    background: #1a1d23 !important;
    border: 1px solid var(--color-border);
    border-radius: 8px;
    padding: 1rem 1.25rem;
    margin: 1.5rem 0;
    overflow-x: auto;
    font-size: 0.875rem;
    line-height: 1.6;
  }
  
  .doc-content pre code {
    background: transparent;
    color: #e4e4e7;
    padding: 0;
    font-family: 'Azeret Mono', monospace;
  }
  
  /* Tables */
  .doc-content table {
    width: 100%;
    margin: 1.5rem 0;
    border-collapse: collapse;
    font-size: 0.875rem;
  }
  
  .doc-content th,
  .doc-content td {
    padding: 0.75rem 1rem;
    border: 1px solid var(--color-border);
    text-align: left;
  }
  
  .doc-content th {
    background: var(--color-bg-tertiary);
    color: var(--color-text-primary);
    font-weight: 600;
  }
  
  .doc-content td {
    color: var(--color-text-secondary);
  }
  
  /* Blockquotes / Alerts */
  .doc-content blockquote {
    margin: 1.5rem 0;
    padding: 1rem 1.25rem;
    border-left: 4px solid var(--color-accent-cyan);
    background: var(--color-bg-tertiary);
    border-radius: 0 8px 8px 0;
  }
  
  .doc-content blockquote p {
    margin: 0;
    color: var(--color-text-secondary);
  }
  
  /* Task lists */
  .doc-content input[type="checkbox"] {
    margin-right: 0.5rem;
  }
  
  /* Horizontal rule */
  .doc-content hr {
    border: none;
    border-top: 1px solid var(--color-border);
    margin: 2rem 0;
  }
</style>
