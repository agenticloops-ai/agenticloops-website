---
import Layout from '../layouts/Layout.astro';
import { Header, Hero, About, Team, RepoSection, PatternsPreview, Topics, Subscribe, Footer } from '../components/Islands';
import ThemeScript from '../components/ThemeScript.astro';

// We use client:load because the landing page is heavy on interactivity and animations
// and we are porting a React SPA. Optimizing into separate islands can be done later.
---

<Layout title="Agentic Loops">
  <ThemeScript />
  <Header client:load />
  <main>
    <Hero client:load />
    <About client:visible />
    <Team client:visible />
    <RepoSection client:visible />
    <PatternsPreview client:visible />
    <Topics client:visible />
    <Subscribe client:visible />
  </main>
  <Footer client:visible />
</Layout>
